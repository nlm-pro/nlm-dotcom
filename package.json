{
  "name": "noelmace.com",
  "private": true,
  "version": "2.0.0",
  "description": "Noël Macé's Personal Web Page",
  "main": "index.html",
  "scripts": {
    "prestart": "run-s clean build:i18n",
    "start": "run-p build_watch:ts serve",
    "start_prod": "run-s build prod:serve",
    "serve": "wds --watch",
    "prod:serve": "MODE=prod npm run serve",
    "release": "standard-version",
    "release:test": "standard-version --dry-run",
    "i18n:extract": "lit-localize extract",
    "lint:lit": "lit-analyzer",
    "lint:ts": "eslint src/**/*.ts",
    "lint": "run-s 'lint:*'",
    "test:dev": "wtr",
    "test:prod": "MODE=prod wtr",
    "test": "run-s test:dev test:prod",
    "test_prod_watch": "MODE=prod wtr --watch",
    "test_watch": "wtr --watch",
    "clean:ts": "rimraf dist",
    "clean:build": "rimraf build",
    "clean": "run-s clean:*",
    "build:i18n": "lit-localize build",
    "prebuild:ts": "npm run clean:ts",
    "build:ts": "tsc",
    "build_watch:ts": "tsc --watch",
    "prebuild:rollup": "npm run clean:build",
    "build:rollup": "rollup -c",
    "build": "run-s build:i18n build:ts build:rollup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nlm-pro/noelmace.com.git"
  },
  "author": "Noël Macé",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/nlm-pro/noelmace.com/issues"
  },
  "homepage": "https://github.com/nlm-pro/noelmace.com#readme",
  "devDependencies": {
    "@netlify/plugin-lighthouse": "^5.0.0",
    "@lit/localize-tools": "^0.6.9",
    "@rollup/plugin-dynamic-import-vars": "^2.0.5",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@web/dev-server": "^0.3.0",
    "@web/rollup-plugin-copy": "^0.4.0",
    "@web/rollup-plugin-html": "^2.0.0",
    "@web/test-runner": "^0.17.0",
    "@web/test-runner-playwright": "^0.10.1",
    "eslint": "^8.47.0",
    "lit-analyzer": "^1.2.1",
    "npm-run-all2": "^6.0.6",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^2.0.0",
    "standard-version": "^9.5.0"
  },
  "dependencies": {
    "@lit/localize": "^0.11.4",
    "@wessberg/browserslist-generator": "^1.0.36",
    "caniuse-api": "^3.0.0",
    "dark-mode-toggle": "^0.14.6",
    "lit": "^2.8.0"
  }
}
